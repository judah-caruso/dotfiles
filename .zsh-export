# Better "cypher" prompt
function git_branch_info() {
	local branch_info
	if [[ "$(command git config --get oh-my-zsh.hide-status 2>/dev/null)" != "1" ]]; then
		branch_info=$(command git symbolic-ref --short HEAD 2>/dev/null) || return 0
		echo "$branch_info"
	fi
}

